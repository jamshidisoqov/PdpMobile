<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:paddingStart="12dp">

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_color"
        android:textSize="18dp"
        android:text="Pdp Android G-18"
        android:fontFamily="@font/poppins_semibold"
        />
    <TextView
        android:id="@+id/tv_group_student_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_group_name"
        android:textColor="@color/app_color"
        android:text="@string/soni" />

    <ImageView
        android:id="@+id/img_group_show"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_eye"
        android:padding="8dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@id/img_group_edit"
        android:background="@drawable/group_detail_bg"
        android:backgroundTint="#50AE46"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/img_group_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@id/img_group_trash"
        android:background="@drawable/group_detail_bg"
        android:backgroundTint="#FFB800"
        android:padding="8dp"
        android:src="@drawable/ic_edit" />
    <ImageView
        android:id="@+id/img_group_trash"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_trash"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:background="@drawable/group_detail_bg"
        android:backgroundTint="#FF0000"/>

</RelativeLayout>