<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:layout_margin="2dp">


    <TextView
        android:id="@+id/tv_mentor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Jamshid Isoqov"
        android:textColor="@color/app_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_mentor_fathername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_mentor_name"
        android:text="Samad o'g'li"
        android:textColor="@color/app_color" />


    <ImageView
        android:id="@+id/img_mentor_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/tv_mentor_name"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/img_mentor_trash"
        android:background="@drawable/group_detail_bg"
        android:backgroundTint="#FFB800"
        android:padding="8dp"

        android:src="@drawable/ic_edit" />

    <ImageView
        android:id="@+id/img_mentor_trash"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/group_detail_bg"
        android:backgroundTint="#FF0000"
        android:padding="8dp"
        android:src="@drawable/ic_trash" />


</RelativeLayout>