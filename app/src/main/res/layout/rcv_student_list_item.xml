<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    >

    <TextView
        android:id="@+id/tv_student_name_of_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Jamshid Isoqov"
        android:textColor="@color/app_color"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_father_name_of_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_student_name_of_group"
        android:textColor="@color/app_color"
        android:text="Samad o'g'li" />


    <ImageView
        android:id="@+id/img_group_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_edit"
        android:padding="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignTop="@id/tv_student_name_of_group"
        android:layout_marginTop="4dp"
        android:background="@drawable/group_detail_bg"
        android:backgroundTint="#FFB800"

        android:layout_toStartOf="@id/img_group_trash"/>

    <ImageView
        android:id="@+id/img_group_trash"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/group_detail_bg"
        android:backgroundTint="#FF0000"
        android:padding="8dp"
        android:src="@drawable/ic_trash" />

    <TextView
        android:id="@+id/tv_date_of_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_father_name_of_group"
        android:layout_alignParentEnd="true"
        android:text="12/12/2021"
        android:textSize="12sp"
        android:textColor="@color/app_color" />

</RelativeLayout>